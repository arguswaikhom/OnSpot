<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.crown.onspot.page.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_explore"
        android:name="com.crown.onspot.page.ExploreFragment"
        android:label="@string/action_btn_explore"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/navigation_my_order"
        android:name="com.crown.onspot.page.MyOrderFragment"
        android:label="@string/title_my_order"
        tools:layout="@layout/fragment_my_order" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.crown.onspot.page.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>
