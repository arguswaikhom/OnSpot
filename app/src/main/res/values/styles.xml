<resources>

    <style name="Material" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/quantum_black_100</item>
        <item name="colorPrimaryDark">@color/quantum_black_100</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Material.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Material.NoActionBar.LightOptionMenu">
        <item name="android:actionOverflowButtonStyle">
            @style/Material.NoActionBar.LightOptionMenu.OverFlow
        </item>
    </style>

    <style name="Material.NoActionBar.LightOptionMenu.OverFlow">
        <item name="android:src">@drawable/ic_round_more_vert_24</item>
    </style>

    <style name="Material.NoActionBar.GreyStatusBar">
        <item name="android:statusBarColor">@color/grey_5</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_sub1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_sub2</item>
    </style>

    <style name="Material.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Material.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
